<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
    version="2.0">

	<!-- Tag para informa o local onde se encontra o arquivo contendo as mensagems de erro personalizadas -->
	<application>
		<message-bundle>com.douglasproglima.sistemafinanceiro.resources.validacao</message-bundle>
		
		<locale-config>
			<default-locale>pt</default-locale>
			<supported-locale>pt</supported-locale>
			<supported-locale>en</supported-locale>
			<supported-locale>jp</supported-locale>			
		</locale-config>
	</application>
</faces-config>
